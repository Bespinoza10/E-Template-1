<div class="col-md-10 center-block upcoming-programs-form padding-bottom-top">
  <h1 style="text-align: center;">New Service</h1>
  <%= form_for @service do |f| %>
    <% if @service.errors.any?%>
      <h2><%= pluralize(@service.errors.count, "error") %> prevented this client from saving:</h2>
      <ul>
        <% @service.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <%end%>
      </ul>
    <%end%>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, {class: 'form-control form-input'} %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, {class: 'form-control form-input'} %>
    </div>


    <button type="submit" class="btn sendbtn">Submit</button>

  <%end%>
</div>
