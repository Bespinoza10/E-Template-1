<div class="container-fluid">
  <div class="container">
    <div class="row">
      <div class="col-md-12 program-content">
        <!-- <div id="form-btns">
          <a id="btn1" class="btn btn-view-more">Header</a>
          <a id="btn3" class="btn btn-view-more">Services</a>
          <a id="btn2" class="btn btn-view-more">Slogan</a>
          <a id="btn4" class="btn btn-view-more">Portfolio</a>
          <a id="btn5" class="btn btn-view-more">Contact</a>
          <a id="btn6" class="btn btn-view-more">Footer</a>
        </div> -->

      <div class="col-md-10 center-block form-container" id="btn1C">
        <%= render 'headerEdit' %>
      </div>
      <div class="col-md-10 center-block form-container" id="btn2C">
        <%= render 'sloganForm' %>
      </div>
      <div class="col-md-10 center-block form-container" id="btn3C">
        <% @contents.each do |content|%>
          <div id="services" class="container padding-section">
            <h1 class="text-center">
              <%= content.services_title%>
            </h1>
            <div class="col-md-6 center padding-section-elements-bottom">
              <hr>
            </div>
            <% @services.each do |service|%>
              <div class="col-sm-3 col-md-3">
                <div class="col-md-6 center">
                  <%= image_tag service.services_img, class: "img-responsive"%>
                </div>
                <h3 class="text-center">
                  <%= service.title %>
                </h3>
                <p class="text-center">
                  <%= truncate(service.description, length: 200)%>
                </p>
                <% if user_signed_in? %>
                  <a><%= link_to "Edit Service", edit_service_path(service), {class: "btn sendbtn"} %></a>
                  <a><%= link_to "Delete", service_path(service), method: :delete, data: { confirm: "Are you sure you want to delete this poor lonely service? If so HaHa poor service!" }, class: "btn btn-danger" %></a>
                <%end%>
              </div>
            <%end%>
            <% if user_signed_in? %>
              <a><%= link_to "New Service", new_service_path(@service), {class: "btn sendbtn"} %></a>
            <%end%>
          </div>
        <%end%>

      </div>

      <div class="col-md-12 form-container" id="btn4C">
        <div id="gallery" class="container-fluid">
          <% @portfolios.each do |portfolio|%>
              <div class="portfolios col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="hovereffect">
                    <%= image_tag portfolio.portfolios_img, class: "img-responsive p-img"%>
                      <div class="overlay">
                        <h2><%= portfolio.title %></h2>
                        <hr>
                        <p class="text-center"><%= truncate(portfolio.description, length: 80)%></p>
                        <a class="btn btn-primary" data-toggle="modal" href="#<%=portfolio.id%>">View Project</a>
                      </div>
                </div>
                <% if user_signed_in? %>
                  <a><%= link_to "Edit Portfolio", edit_portfolio_path(portfolio), {class: "btn btn-primary"} %></a>
                  <a><%= link_to "Delete", portfolio_path(portfolio), method: :delete, data: { confirm: "Are you sure you want to delete this poor lonely Portfolio? If so HaHa poor Portfolio!" }, class: "btn btn-danger" %>
                  </a>
                <%end%>

            </div>

            <div class="modal fade" id="<%=portfolio.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
              <div class="gallery-modal modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel"><%=portfolio.title%></h4>
                  </div>
                  <div class="modal-body">
                    <%=portfolio.description%>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                  </div>
                </div>
              </div>
            </div>
          <%end%>
          <% if user_signed_in? %>
            <a><%= link_to "New Portfolio", new_portfolio_path(@portfolio), {class: "btn btn-primary"} %></a>
          <%end%>
        </div>
      </div>

      <div class="col-md-10 center-block form-container" id="btn5C">
        <%= render 'contactForm' %>
      </div>

      <div class="col-md-10 center-block form-container" id="btn6C">
        <%= render 'footerForm' %>
      </div>

    </div>
  </div>
</div>
