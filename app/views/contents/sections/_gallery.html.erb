<div id="gallery" class="container-fluid">
  <% @portfolios.each do |portfolio|%>
    <div class="portfolios col-lg-4 col-md-4 col-sm-6 col-xs-12">
      <div class="hovereffect">
          <%= image_tag portfolio.portfolios_img, class: "img-responsive p-img"%>
            <div class="overlay">
              <h2><%= portfolio.title %></h2>
              <hr>
              <p class="text-center"><%= truncate(portfolio.description, length: 80)%></p>
              <a class="btn btn-border-purple" data-toggle="modal" href="#<%=portfolio.id%>">View Project</a>
            </div>
      </div>


      <% if user_signed_in? %>
        <div class="col-md-6 padding-section-elements-bottom" style="margin-top:10px;">
          <a><%= link_to "Edit Portfolio", edit_portfolio_path(portfolio), {class: "btn btn-border-orange-small"} %></a>
          <a><%= link_to "Delete", portfolio_path(portfolio), method: :delete, data: { confirm: "Are you sure you want to delete this poor lonely Portfolio? If so HaHa poor Portfolio!" }, class: "btn btn-border-red-small" %>
          </a>
        </div>
      <%end%>
    </div>

    <div class="modal fade" id="<%=portfolio.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="gallery-modal modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel"><%=portfolio.title%></h4>
          </div>
          <div class="modal-body">
            <%=portfolio.description%>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
  <%end%>
  <div class="col-md-12 ">

    <% if user_signed_in? %>
      <div class="col-md-6 center padding-section-elements-bottom">
        <a><%= link_to "New Portfolio", new_portfolio_path(@portfolio), {class: "btn btn-border-blue"} %></a>
      </div>
    <%end%>
  </div>

</div>
