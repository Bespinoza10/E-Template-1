<% @contents.each do |content|%>
  <div class="container-fluid footer">
    <a class="btn btn-warning" role="button" data-toggle="collapse" data-target="#footer-edit" aria-expanded="false"    aria-controls="collapseExample">
      Editar Footer
    </a>
    <div class="container">
      <div class="col-md-12">

          <div class=" footer-links">
            <% if content.fb_username.empty?%>
              <li style="display:none"><a href="https://www.facebook.com/<%= content.fb_username%>"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
            <%else%>
              <a href="https://www.facebook.com/<%= content.fb_username%>"><i class="fa fa-facebook" aria-hidden="true"></i></a>
            <%end%>
            <% if content.ig_username.empty?%>
               <li style="display:none;"><a href="https://www.instagram.com/<%= content.ig_username%>"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
            <%else%>
              <a href="https://www.instagram.com/<%= content.ig_username%>"><i class="fa fa-instagram" aria-hidden="true"></i></a>
            <%end%>
            <% if content.twitter_username.empty?%>
              <li style="display:none;"><a href="https://twitter.com/<%= content.twitter_username%>"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
            <%else%>
              <a href="https://twitter.com/<%= content.twitter_username%>"><i class="fa fa-twitter" aria-hidden="true"></i></a>
            <%end%>
            <% if content.in_username.empty?%>
              <li style="display:none;"><a href="https://linkedin.com/in/<%= content.in_username%>"><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
            <%else%>
              <a href="https://linkedin.com/in/<%= content.in_username%>"><i class="fa fa-linkedin" aria-hidden="true"></i></a>
            <%end%>
            <% if content.pin_username.empty?%>
              <li style="display:none;"><a href="https://www.pinterest.com/<%= content.pin_username%>"><i class="fa fa-pinterest-p" aria-hidden="true"></i></a></li>
            <%else%>
              <a href="https://www.pinterest.com/<%= content.pin_username%>"><i class="fa fa-pinterest-p" aria-hidden="true"></i></a>
            <%end%>
          </div>

      </div>

      <div class="col-md-12">
        <ul class=" footer-links">

          <a href="#">Home</a>
          <a href="#">About</a>
          <a href="#">Services</a>
          <a href="#">Portfolio</a>
          <a href="#">Contact</a>
          <% if user_signed_in? %>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn-border" %></li>
          <%else%>
            <li><a href="<%= new_user_session_path %>">Login</a><li>
          <%end%>

        </ul>
      </div>
    </div>
  </div>
<%end%>
