<!DOCTYPE html>
<html>
<head>
  <title>OhtTemplate2</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if notice %>
    <div id="notice-wrapper">
      <p class="notice"><%= notice %></p>
    </div>
  <%elsif alert%>
    <div id="notice-wrapper">
      <p class="alert"><%= alert %></p>
    </div>
  <%end%>

  <% if current_page?(root_path) %>
    <!-- MINIMIZED -->
    <nav class="shrink-nav navbar navbar-default navbar-fixed-top">
      <div class="container">


        <!-- NAV STARTS -->
        <div class="container">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <% @title.each do |title| %>
              <a class="navbar-brand" ><%= title.logo_name %></a>
              <% if user_signed_in? %>
                <div class="text-center">
                  <a class="btn-border-edit" data-toggle="modal" data-target="#logoModal">Edit Logo</a>
                </div>
                <br>
                <!-- Modal -->
                <div class="modal fade" id="logoModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h2 class="modal-title" id="myModalLabel">Edit Your Logo</h2>
                      </div>
                      <div class="modal-body">

                        <div class="col-md-6 center">
                          <%= form_for title, :html => { :style => 'display: inline-block;'} do |f| %>
                            <% if title.errors.any?%>
                              <h2><%= pluralize(title.errors.count, "error") %> prevented this client from saving:</h2>
                              <ul>
                                <% title.errors.full_messages.each do |msg| %>
                                  <li><%= msg %></li>
                                <%end%>
                              </ul>
                            <%end%>
                            <div class="form-group col-md-12">
                              <%= f.label :logo_name %>
                              <%= f.text_field :logo_name, {class: 'form-control form-input'} %>
                            </div>

                            <div class="col-md-6">
                              <button type="submit" class="btn btn-border-purple-submit" style="margin-bottom:10px;">Submit</button>
                            </div>
                            <div class="form-group col-md-6">
                              <button type="button" class="btn btn-border-orange" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Cancel</span></button>
                            </div>

                          <%end%>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <%end%>
            <%end%>
          </div>

          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
              <li><a href="#home">Home</a></li>
              <li><a href="#services">Services</a></li>
              <li><a href="#gallery">Portfolio</a></li>
              <li><a href="#contact">Contact</a></li>
              <% if user_signed_in? %>
                <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn-border" %></li>
              <%end%>
            </ul>

          </div><!-- /.navbar-collapse -->
        </div><!-- /.container -->
      </div>
    </nav>
  <%end%>


<%= yield %>
</body>
</html>
